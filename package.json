{
  "name": "iblal-orm",
  "version": "0.2.0",
  "description": "Type-Safe TypeScript ORM with Automated Type Generation from Database Schema",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "iblal-introspect": "./dist/cli/introspect.js",
    "iblal-migrate": "./dist/cli/migrate.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Iblal/iblalORM.git"
  },
  "bugs": {
    "url": "https://github.com/Iblal/iblalORM/issues"
  },
  "homepage": "https://github.com/Iblal/iblalORM#readme",
  "scripts": {
    "build": "tsc",
    "introspect": "ts-node src/cli/introspect.ts",
    "migrate:create": "ts-node src/cli/migrate.ts create",
    "migrate:run": "ts-node src/cli/migrate.ts run",
    "migrate:status": "ts-node src/cli/migrate.ts status",
    "clean": "rm -rf dist generated",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "orm",
    "typescript",
    "postgresql",
    "type-safe",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
